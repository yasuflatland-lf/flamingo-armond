# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Card {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  cards: [Card!]!
}

input NewCard {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewCard!): Card!
}
